{%- style -%}
  .faq-section-{{ section.id }} {
    padding: {{ section.settings.padding_v }}px 0;
    background-color: {{ section.settings.bg_color }};
  }
  .faq-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .faq-title {
    text-align: center;
    margin-bottom: 10px;
    font-size: {{ section.settings.title_size }}px;
    color: {{ section.settings.text_color }};
  }
  .faq-subtitle {
    text-align: center;
    margin-bottom: 40px;
    color: #666;
  }

  .faq-item {
    margin-bottom: 12px;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-header {
    background-color: {{ section.settings.item_bg }};
    color: #ffffff;
    padding: 18px 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .faq-header:hover {
    background-color: {{ section.settings.item_hover_bg }};
  }

  .faq-item.active .faq-header {
    background-color: {{ section.settings.item_active_bg }};
  }

  .faq-question {
    font-weight: 600;
    font-size: 16px;
    display: flex;
    align-items: center;
  }

  .faq-icon {
    font-size: 20px;
    margin-left: 15px;
    transition: transform 0.3s ease;
  }

  .faq-content {
    max-height: 0;
    overflow: hidden;
    background-color: #ffffff;
    transition: max-height 0.4s cubic-bezier(0, 1, 0, 1);
  }

  .faq-item.active .faq-content {
    max-height: 1000px;
    transition: max-height 0.4s ease-in-out;
  }

  .faq-answer {
    padding: 25px;
    line-height: 1.6;
    color: #333;
    border: 1px solid #f0f0f0;
    border-top: none;
    border-radius: 0 0 {{ section.settings.border_radius }}px {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<section class="faq-section-{{ section.id }}">
  <div class="faq-container">
    {% if section.settings.title != blank %}
      <h2 class="faq-title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="faq-subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="faq-wrapper">
      {% for block in section.blocks %}
        <div class="faq-item" {{ block.shopify_attributes }}>
          <div class="faq-header" onclick="toggleFAQ(this)">
            <div class="faq-question">
               <span style="margin-right:15px;">{% if section.settings.show_plus %}+{% endif %}</span>
               {{ block.settings.question }}
            </div>
            <div class="faq-arrow">
               <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><path d="M6 9l6 6 6-6"/></svg>
            </div>
          </div>
          <div class="faq-content">
            <div class="faq-answer">
              {{ block.settings.answer }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
function toggleFAQ(element) {
  const item = element.parentElement;
  const isActive = item.classList.contains('active');
  
  document.querySelectorAll('.faq-item').forEach(el => {
    el.classList.remove('active');
  });

  if (!isActive) {
    item.classList.add('active');
  }
}
</script>

{% schema %}
{
  "name": "Wombat Dynamic FAQ",
  "settings": [
    { "type": "text", "id": "title", "label": "Main Title", "default": "FAQs" },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Have any questions? See if you can find your answer." },
    { "type": "color", "id": "bg_color", "label": "Section Background", "default": "#ffffff" },
    { "type": "color", "id": "item_bg", "label": "Item Background (Default)", "default": "#3d3d3d" },
    { "type": "color", "id": "item_hover_bg", "label": "Item Background (Hover)", "default": "#575757" },
    { "type": "color", "id": "item_active_bg", "label": "Item Background (Active)", "default": "#a86d52" },
    { "type": "range", "id": "border_radius", "label": "Corner Roundness", "min": 0, "max": 40, "step": 1, "default": 12 },
    { "type": "range", "id": "padding_v", "label": "Vertical Padding", "min": 0, "max": 100, "step": 5, "default": 50 },
    { "type": "checkbox", "id": "show_plus", "label": "Show + sign", "default": true }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        { "type": "text", "id": "question", "label": "Question", "default": "How is my order packed?" },
        { "type": "richtext", "id": "answer", "label": "Answer", "default": "<p>Our meals are packed in a thermal sleeved box...</p>" }
      ]
    }
  ],
  "presets": [
    { "name": "Wombat Dynamic FAQ" }
  ]
}
{% endschema %}