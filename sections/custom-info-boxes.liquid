<div class="info-boxes-{{ section.id }} info-section-wrapper">
  <div class="page-width info-inner-container">
    {% if section.settings.title != blank %}
      <h2 class="section-heading">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="info-grid">
      {% for block in section.blocks %}
        <div class="info-card" {{ block.shopify_attributes }}>
          <div class="info-icon-wrapper">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url: width: 100 }}" alt="icon">
            {% else %}
              <span class="placeholder-icon">★</span>
            {% endif %}
          </div>
          <div class="info-text-content">
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.subheading }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .info-boxes-{{ section.id }} {
    margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px;
    background-color: {{ section.settings.bg_color }};
    padding: 60px 0;
  }
  .info-inner-container {
    max-width: var(--page-content-width) !important; 
    margin: 0 auto;
  }
  .section-heading {
    text-align: center;
    margin-bottom: 40px;
    font-size: 2rem;
  }
  .info-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.cols_desktop }}, 1fr);
    gap: 30px;
  }
  .info-card {
    background: #ffffff;
    padding: 30px;
    border-radius: {{ section.settings.card_radius }}px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid #f0f0f0;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .info-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    border-color: transparent;
  }
  .info-icon-wrapper {
    width: 60px;
    height: 60px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .info-icon-wrapper img {
    max-width: 100%;
    object-fit: contain;
  }
  .info-text-content h3 {
    margin: 0 0 10px;
    font-size: 1.2rem;
    color: #333;
  }
  .info-text-content p {
    margin: 0;
    font-size: 0.95rem;
    color: #666;
    line-height: 1.4;
  }

  /* الموبايل */
  @media screen and (max-width: 768px) {
    .info-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .info-card { padding: 20px; }
  }
</style>

{% schema %}
{
  "name": "Custom Info Boxes",
  "settings": [
    { "type": "text", "id": "title", "label": "Section Heading", "default": "Why Shop With Us?" },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#fcfcfc" },
    { "type": "range", "id": "cols_desktop", "label": "Boxes per row (Desktop)", "min": 2, "max": 4, "step": 1, "default": 3 },
    { "type": "range", "id": "card_radius", "label": "Card Corners", "min": 0, "max": 40, "step": 2, "default": 12 },
    { "type": "header", "content": "Spacing" },
    { "type": "range", "id": "margin_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Top Margin", "default": 40 },
    { "type": "range", "id": "margin_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Bottom Margin", "default": 40 }
  ],
  "blocks": [
    {
      "type": "info_box",
      "name": "Box Item",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Icon/Image" },
        { "type": "text", "id": "heading", "label": "Title", "default": "Free Shipping" },
        { "type": "textarea", "id": "subheading", "label": "Description", "default": "On all orders over $100" }
      ]
    }
  ],
  "presets": [{ "name": "Custom Info Boxes", "blocks": [ { "type": "info_box" }, { "type": "info_box" }, { "type": "info_box" } ] }]
}
{% endschema %}